  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (0.11.x or later)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "hello_app.webapp"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"   // Remove to auto-reload modified pages
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "env": {
        "FLASK_ENV": "development"
      }
    },
    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "port": 3000,
      "host": "localhost"
    }
  ]
}